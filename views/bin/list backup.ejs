                    </div>
                    <div class="col-4">
                        <button class="input01 btn btn-warning" type="submit" name="button">remove</button>
                    </div>

                </div>


            </form>
        </div>



        <% for (var i=0;i<newList.length;i++){ %>
            <div class="row">
                <div class="col-1">
                    <input type="checkbox">
                </div>
                <div class="col-5">
                    <div style="text-align: center;">
                        <img class="myimg" src="<%= newList[i].image %>" alt="pic1">
                    </div>
                </div>
                <div class="col-4">
                    <div style="display: inline-block;">
                        <p id="p_id">id:
                            <%= newList[i]._id %>
                        </p>
                        <p>name:
                            <%= newList[i].name %>
                        </p>
                        <p>price:
                            <%= newList[i].price %>
                        </p>
                    </div>
                </div>
                <div class="col-2">
                    <div>
                        <button type="button" class="edit" data-id="<%= newList[i]._id %>" data-name="<%= newList[i].name %>" data-category="<%= newList[i].category %>" data-price="<%= newList[i].price %>" data-image="<%= newList[i].image %>">edit</button>
                        <button type="button" class="remove" data-id="<%= newList[i]._id %>">remove</button>
                    </div>
                </div>
            </div>
            <% } %>


